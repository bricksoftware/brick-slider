    "umd": "./dist/brick-slider.umd.cjs",
    "cjs": "./dist/brick-slider.cjs"
  },
  "scripts": {
    "start": "vite",
    "test": "vitest",
    "lint": "eslint --ext .ts {src,__tests__}/**.ts",
    "build": "tsc && vite build  && node transform-cdn.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "fs-extra": "^11.1.1",
    "vite-plugin-minify": "^1.5.2"
  }
